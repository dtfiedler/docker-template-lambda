{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
